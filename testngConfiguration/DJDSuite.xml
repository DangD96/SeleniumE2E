<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
    <suite name="DJD Test Suite" parallel="tests" thread-count="3">
        <test verbose="2" name="Logging In">
            <classes>
                <class name="org.djd.logintest.LoginTest">
                    <methods>
                        <include name="loginInvalid"/>
                        <include name="loginValid"/>
                    </methods>
                </class>
            </classes>
        </test>
        <test verbose="2" name="Adding Product to Cart">
            <classes>
                <class name="org.djd.producttest.ProductTest"/>
            </classes>
        </test>
    </suite>